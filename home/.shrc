# .shrc file for sh(1).

#if [ -f /etc/shrc ]; then
#	. /etc/shrc
#fi

case "$-" in *i*)
	if /bin/test -z "${HOST}"; then
		HOST="$(hostname)"
	fi
	PS1="$PS1"
	#PS1="\${PWD##*/} \$ "
	#PS1="${USER}@${HOST%%.*} $PS1"
	set -o emacs

	# alias's
	alias c="clear"
	alias ..="cd .."
	alias ll="ls -l"
	alias lsa="ls -a"
	alias lsal="ls -alh"
	alias lsd="exa -l"
	alias lsda="exa -al"
	alias install="doas pkgin install"
	alias remove="doas pkgin remove"
	alias update="doas pkgin update"
	alias upgrade="doas pkgin upgrade"
	alias fullupgrade="doas pkgin full-upgrade"
	alias autoremove="doas pkgin autoremove"
	alias clean="doas pkgin clean"
	alias cc="rm -r .cache/*"
	alias cvsup="cd /usr/pkgsrc/ && doas cvs update -dP"
	alias miccdd="doas make install clean clean-depends distclean"
	alias reboot="doas reboot"
	alias bye="shutdown -p now"
	alias reload="xrdb -merge ~/.Xresources"
	alias todo="cat ~/Documents/todo/todo.txt"
	alias todoed="vim ~/Documents/todo/todo.txt"
	alias view="devour sxiv"
	alias listfonts="convert -list font"
	alias mnt="doas mount -t msdos /dev/sd0e /mnt && cd /mnt"
	alias umnt="doas umount -t msdos /mnt && cd"
	alias fonts="cd /usr/pkg/share/fonts/X11 && pwd"
	alias flex="cd ~/Pictures/screens && uname -sr | figlet -f smslant && ufetch && df -h && scrot -q 100 -cd 3 '%m-%d-%Y-%R.png' && cd"
	;;
esac
