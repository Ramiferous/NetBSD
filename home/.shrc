# .shrc file for sh(1).

case "$-" in *i*)
	PS1="$PS1"
	set -o emacs

# Run 'fff' with 'f' or whatever you decide to name the function.
f() {
    fff "$@"
    cd "$(cat "${XDG_CACHE_HOME:=${HOME}/.cache}/fff/.fff_d")"
}

# Zoxide
eval "$(zoxide init posix --hook prompt)"

# ARCHIVE EXTRACTION
# usage: ex <file>
ex ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar.bz2)   tar xjf $1    ;;
      *.tar.gz)	   tar xzf $1    ;;
      *.tar.xz)	   tar xf $1     ;;
      *.tar)	   tar xf $1     ;;
      *.tar.zst)   uzstd $1      ;;
      *.bz2)	   bunzip2 $1    ;;
      *.rar)	   unrar x $1    ;;
      *.gz)	   gunzip $1     ;;
      *.tbz2)	   tar xjf $1    ;;
      *.tgz)	   tar xzf $1    ;;
      *.zip)	   unzip $1      ;;
      *.Z)	   uncompress $1 ;;
      *.7z)	   7z x $1       ;;
      *.deb)	   ar x $1       ;;
      *)	   echo "'$1' cannot be extracted via ex()" ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}


