# .shrc file for sh(1).

#if [ -f /etc/shrc ]; then
#	. /etc/shrc
#fi

case "$-" in *i*)
	if /bin/test -z "${HOST}"; then
		HOST="$(hostname)"
	fi
	PS1="$PS1"
	#PS1="\${PWD##*/} \$ "
	#PS1="${USER}@${HOST%%.*} $PS1"
	set -o emacs

	# alias's
	alias c="clear"
	alias ..="cd .."
	alias ll="ls -l"
	alias lsa="ls -a"
	alias lsal="ls -alh"
	alias lsd="exa -l && pwd"
	alias lsda="exa -al"
	alias pkginstall="doas pkgin install"
	alias pkgremove="doas pkgin remove"
	alias pkgupdate="doas pkgin update"
	alias pkgupgrade="doas pkgin upgrade"
	alias fullupgrade="doas pkgin full-upgrade"
	alias autoremove="doas pkgin autoremove"
	alias pkgclean="doas pkgin clean"
	alias sysupg="sysupgrade auto https://nyftp.netbsd.org/pub/NetBSD-daily/netbsd-9/latest/amd64"
	alias cc="rm -r .cache/*"
	alias cvsup="cd /usr/pkgsrc/ && doas cvs update -dP"
	alias miccdd="doas make install clean clean-depends distclean"
	alias reboot="doas reboot"
	alias bye="shutdown -p now"
	alias reload="xrdb -merge ~/.Xresources"
	alias w3m="w3m file:///home/dave/Downloads/startpage/index.html"
	alias todo="cat ~/Documents/todo/todo.txt"
	alias todoed="vim ~/Documents/todo/todo.txt"
	alias take-a-dump="cd ~/Pictures/screens && scrot -q 100 -cd 3 '%m-%d-%Y-%R.png' && cd"
	alias view="devour sxiv"
	alias listfonts="convert -list font"
	alias addwifi="doas vim /etc/wpa_supplicant.conf"
	alias mnt="doas mount -t msdos /dev/sd0e /mnt && cd /mnt"
	alias umnt="doas umount -t msdos /mnt && cd"
	alias fonts="cd /usr/pkg/share/fonts/X11 && pwd"
	alias wttr="curl wttr.in/Melbourne?format=3"
	alias bat="$(envstat -s acpibat0:charge | awk 'FNR==3 {print $6}' | tr -d '()')"
	alias flex="cd ~/Pictures/screens && uname -sr | figlet -f smslant && ufetch && df -h && scrot -q 100 -cd 3 '%m-%d-%Y-%R.png' && cd"
	;;
esac
